{
  "name": "mono",
  "private": true,
  "devDependencies": {
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.3",
    "cypress": "^7.4.0",
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tsdx": "^0.14.1",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "clean": "rm -rf node_modules && rm -rf modules/*/node_modules modules/*/dist",
    "clean:app": "rm -rf example/node_modules example/.cache example/dist",
    "build": "lerna run build",
    "prepublish": "lerna run prepublish",
    "publish": "lerna publish",
    "start:app": "yarn run build && yarn --cwd example && yarn --cwd example start",
    "cypress": "cypress run",
    "cypress:open": "cypress open"
  }
}
